{% extends 'base.html.twig' %}

{% block title %}Iniciar Sesión | Instagram Style{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# Estilos de Instagram (Puedes moverlos a tu archivo CSS principal si lo prefieres) #}
    <style>
        :root {
            --instagram-blue: #0095f6;
            --instagram-text-dark: #262626;
            --instagram-border: #dbdbdb;
            --instagram-background: #fafafa;
        }

        body {
            background-color: var(--instagram-background);
        }

        .login-container {
            max-width: 350px;
            margin: 60px auto;
            padding: 0;
        }

        .instagram-card {
            border: 1px solid var(--instagram-border);
            border-radius: 1px;
            background-color: #fff;
            padding: 40px;
            margin-bottom: 10px;
        }

        .ig-title {
            font-family: 'Billabong', cursive; /* Idealmente si tienes la fuente */
            font-size: 52px;
            text-align: center;
            margin-bottom: 20px;
        }

        .form-control-ig {
            background-color: #fafafa;
            border: 1px solid var(--instagram-border);
            border-radius: 3px;
            padding: 9px 8px;
            font-size: 14px;
            line-height: 18px;
            margin-bottom: 6px;
        }

        .form-control-ig:focus {
            background-color: #fff;
            border-color: #a8a8a8;
            box-shadow: none;
        }

        .btn-blue-ig {
            background-color: var(--instagram-blue);
            border: 1px solid var(--instagram-blue);
            color: #fff;
            font-weight: 600;
            padding: 7px 16px;
            font-size: 14px;
            width: 100%;
            margin-top: 10px;
        }
        .btn-blue-ig:hover {
            background-color: #0084e5; /* Un poco más oscuro */
            border-color: #0084e5;
            color: #fff;
        }

        .register-link-card {
            text-align: center;
            padding: 20px 0;
            font-size: 14px;
        }

        .register-link-card a {
            color: var(--instagram-blue);
            font-weight: 600;
            text-decoration: none;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="login-container">
        
        {# Form Card #}
        <div class="instagram-card">
            
            <h1 class="ig-title">
                <i class="bi bi-lock-fill me-2"></i> Instagram
            </h1>
            
            <h2 class="h6 text-muted text-center mb-4">Inicia sesión en tu cuenta</h2>

            <form method="post">
                
                {% if error %}
                    <div class="alert alert-danger small text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="alert alert-info small text-center">
                        Ya has iniciado sesión como **{{ app.user.userIdentifier }}**. 
                        <a href="{{ path('app_logout') }}">Cerrar Sesión</a>
                    </div>
                {% endif %}

                <label for="inputUsername" class="visually-hidden">Username</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" 
                       class="form-control form-control-ig" placeholder="Usuario" autocomplete="username" required autofocus>
                
                <label for="inputPassword" class="visually-hidden">Password</label>
                <input type="password" name="password" id="inputPassword" 
                       class="form-control form-control-ig" placeholder="Contraseña" autocomplete="current-password" required>
                
                <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                <div class="checkbox mb-3 mt-2 small">
                    <label class="text-muted">
                        <input type="checkbox" name="_remember_me"> Recuérdame
                    </label>
                </div>

                <button class="btn btn-blue-ig" type="submit">
                    Iniciar Sesión
                </button>
            </form>
        </div>

        {# Register Link Card #}
        <div class="instagram-card register-link-card">
            ¿No tienes una cuenta? 
            <a href="{{ path('app_register') }}">Regístrate</a>
        </div>
    </div>
{% endblock %}