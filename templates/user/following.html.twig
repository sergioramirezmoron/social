{% extends 'base.html.twig' %}

{% block title %}Siguiendo a{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                
                <div class="card shadow-sm border-0" style="border: 1px solid var(--instagram-border, #dbdbdb);">
                    <div class="card-header bg-white border-bottom text-center">
                        <h1 class="card-title fw-bold fs-4 mb-0" style="color: #262626;">
                            <i class="bi bi-person-check-fill me-2" style="color: #0095f6;"></i> 
                            Usuarios que **{{ user.username }}** Sigue
                        </h1>
                    </div>

                    <div class="card-body p-4">
                        <p class="text-center text-muted fw-bold mb-4">
                            Total Siguiendo: <span class="badge rounded-pill bg-primary ms-1" style="background-color: #0095f6 !important;">{{ following|length }}</span>
                        </p>
                        
                        <div class="list-group list-group-flush">
                            {% for followed in following %}
                                <div class="list-group-item d-flex justify-content-between align-items-center py-2 px-0" style="border-color: var(--instagram-border);">
                                    
                                    {# Información del Usuario Seguido #}
                                    <div class="d-flex align-items-center">
                                        {# Avatar del Usuario Seguido #}
                                        {% set followedAvatar = followed.picture ? asset('img/' ~ followed.picture) : asset('img/default-avatar.png') %}
                                        <img 
                                            src="{{ followedAvatar }}" 
                                            alt="{{ followed.username }}" 
                                            class="rounded-circle me-3" 
                                            style="width: 40px; height: 40px; object-fit: cover; border: 1px solid #dbdbdb;"
                                        >

                                        {# Nombre de Usuario #}
                                        <a href="{{ path('app_user_show', {'id': followed.id}) }}" class="text-decoration-none fw-bold" style="color: #262626;">
                                            {{ followed.username }}
                                        </a>
                                    </div>

                                    {# Botón de acción (Ver Perfil) #}
                                    <a href="{{ path('app_user_show', {'id': followed.id}) }}" class="btn btn-sm btn-outline-secondary">
                                        Ver Perfil
                                    </a>
                                </div>
                            {% else %}
                                <p class="alert alert-info text-center mb-0">
                                    <i class="bi bi-info-circle me-1"></i> **{{ user.username }}** no está siguiendo a nadie todavía.
                                </p>
                            {% endfor %}
                        </div>

                        {# Botón para volver al perfil #}
                        <div class="text-center mt-4">
                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-outline-primary fw-bold" style="border-color: #dbdbdb; color: #262626;">
                                <i class="bi bi-arrow-left me-1"></i> Volver al perfil
                            </a>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
{% endblock %}