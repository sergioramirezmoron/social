{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<h1>Perfil</h1>

    <h3>Username</h3>
        <span>{{ user.username }}</span>

    <p>
        <a href="{{ path('app_user_followers', {'id': user.id}) }}">
            Followers ({{ user.getFollowers()|length }})
        </a>
        |
        <a href="{{ path('app_user_following', {'id': user.id}) }}">
            Followings ({{ user.getFollowing()|length }})
        </a>
    </p>

        <h4>Followers recientes</h4>
            <ul>
                {% for follower in user.getFollowers()|slice(0, 5) %}
                    <li>{{ follower.username }}</li>
                {% else %}
                    <li>No tiene followers todav√≠a.</li>
                {% endfor %}
            </ul>

    <a href="{{ path('app_post_index') }}">back to list</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
