<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>‚ö´Ô∏è</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        
        {# Bootstrap CSS #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        
        {# Bootstrap Icons #}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
        
        {% block stylesheets %}
        <style>
            :root {
                --instagram-blue: #0095f6;
                --instagram-border: #dbdbdb;
                --instagram-bg: #fafafa;
            }
            
            body {
                background-color: var(--instagram-bg);
                font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            }
            
            .navbar-brand {
                font-family: 'Billabong', cursive;
                font-size: 2rem;
                font-weight: 400;
            }
            
            .user-info {
                background: white;
                border-bottom: 1px solid var(--instagram-border);
                padding: 0.5rem 0;
            }
            
            .btn-instagram {
                background-color: var(--instagram-blue);
                color: white;
                border: none;
                font-weight: 600;
            }
            
            .btn-instagram:hover {
                background-color: #1877f2;
                color: white;
            }

            .img-hover:hover {
                 box-shadow: 0 0 10px rgba(0,0,0,0.4);
            }
        </style>
        {% endblock %}

        {% block javascripts %}
        {# Bootstrap JS #}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        {% endblock %}
    </head>
    <body>
        {# Navbar #}
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom sticky-top">
            <div class="container">
                <a class="navbar-brand" href="{{ path('app_post_index') }}">InstaGram ü¶ô</a>
                
                {% if app.user %}
                <div class="d-flex align-items-center gap-3">
                    <a href="{{ path('app_post_new') }}" class="btn btn-sm btn-instagram">
                        <i class="bi bi-plus-square"></i> New Post
                    </a>
                    <a href="{{ path('app_user_index') }}" class="btn btn-sm btn-outline-primary d-flex align-items-center gap-1">
                        <i class="bi bi-search"></i>
                    </a>
                    <a href="{{ path('chat_list') }}" class="btn btn-sm btn-outline-primary d-flex align-items-center gap-1">
                        <i class="bi bi-chat-dots"></i> 
                    </a>
                    <a href="{{ path('app_invitation_index') }}" class="btn btn-sm btn-outline-warning">
                        <i class="bi bi-envelope"></i> Notificaciones
                    </a>
                    <span class="text-muted">
                        <a href="{{ path('app_user_show', {'id': app.user.id})}}" class="text-decoration-none" style="color: #262626;">
                            <img src="{{ asset('img/' ~ app.user.picture) }}" alt="{{ app.user.username }}" width="50px" style="border-radius: 50%;" class="img-hover">
                        </a>
                    </span>
                    <a href="{{ path('app_logout') }}" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </a>
                </div>
                {% endif %}
            </div>
        </nav>

        {% block body %}{% endblock %}
    </body>
</html>