{% extends 'base.html.twig' %}

{% block body %}
{{ parent() }}
 <style>
/* ----- LAYOUT GENERAL ------ */
.chat-container {
    display: flex;
    flex-direction: column;
    height: 80vh; /* Ajusta según tu layout */
    max-height: 80vh;
    background: #f5f5f5;
    border: 1px solid #ddd;
    border-radius: 8px;
}

/* ----- HEADER ----- */
.chat-header {
    padding: 15px;
    background: #0084ff;
    color: white;
    font-weight: bold;
    font-size: 18px;
    display: flex;
    align-items: center;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
}

/* ----- CAJA DE MENSAJES ----- */
.chat-messages {
    flex: 1;
    overflow-y: auto;
    padding: 15px;
    display: flex;
    flex-direction: column;
    gap: 10px;
    background: #f0f0f0;
}

/* ----- BURBUJAS ----- */
.message {
    max-width: 75%;
    padding: 10px 14px;
    border-radius: 15px;
    font-size: 15px;
    line-height: 1.3;
    word-wrap: break-word;
}

.sent {
    align-self: flex-end;
    background: #0084ff;
    color: white;
    border-bottom-right-radius: 3px;
}

.received {
    align-self: flex-start;
    background: white;
    border-bottom-left-radius: 3px;
    border: 1px solid #ddd;
}

/* ----- FOOTER (input + botón) ----- */
.chat-input-area {
    display: flex;
    padding: 10px;
    background: white;
    border-top: 1px solid #ddd;
    border-bottom-left-radius: 8px;
    border-bottom-right-radius: 8px;
}

.chat-input-area input {
    flex: 1;
    padding: 12px;
    border: 1px solid #bbb;
    border-radius: 20px;
    font-size: 15px;
}

.chat-input-area button {
    margin-left: 10px;
    padding: 12px 18px;
    background: #0084ff;
    color: white;
    border: none;
    border-radius: 20px;
    cursor: pointer;
    font-size: 15px;
}

.chat-input-area button:hover {
    background: #006bd6;
}

/* ----- RESPONSIVE ----- */
@media (max-width: 600px) {
    .chat-header {
        font-size: 16px;
        padding: 12px;
    }
    .message {
        max-width: 85%;
        font-size: 14px;
    }
    .chat-input-area input {
        font-size: 14px;
    }
    .chat-input-area button {
        font-size: 14px;
    }
}
</style>

<div class="chat-container">

    <div class="chat-header">
        Chateando con {{ otherUser.username }}
    </div>

    <div id="chat-box" class="chat-messages">
        {% include 'chat/_messages.html.twig' %}
    </div>

    <form action="{{ path('chat_send', {id: otherUser.id}) }}" method="POST" class="chat-input-area">
        <input type="text" name="message" placeholder="Escribe un mensaje..." required autocomplete="off">
        <button type="submit">Enviar</button>
    </form>

</div>

<script>
// Auto-scroll al fondo
let box = document.querySelector('#chat-box');
box.scrollTop = box.scrollHeight;

// Auto-refresh cada 2 segundos (AJAX)
setInterval(function() {
    fetch(window.location.href, {headers: {"X-Partial": "1"}})
        .then(r => r.text())
        .then(html => {
            document.querySelector('#chat-box').innerHTML = html;
            let box = document.querySelector('#chat-box');
            box.scrollTop = box.scrollHeight;
        });
}, 2000);
</script>
{% endblock %}
